{
    "name": "best-release-indonesia",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "update-cache": "tsx src/hooks/fetchAnimeData.ts",
        "dev": "NODE_OPTIONS='--inspect' npm run update-cache && next dev",
        "scan": "NODE_OPTIONS='--inspect' npm run update-cache && next dev & npx react-scan@latest localhost:3000",
        "build": "npm run update-cache && next build",
        "start": "next start",
        "lint": "next lint",
        "pretty": "prettier --check .",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@heroui/react": "2.7.2",
        "lodash.debounce": "^4.0.8",
        "lucide-react": "^0.475.0",
        "next": "15.1.7",
        "next-themes": "^0.4.4",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-icons": "^5.4.0"
    },
    "devDependencies": {
        "@types/node": "^22.13.2",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^9",
        "eslint-config-next": "15.1.7",
        "prettier": "^3.5.1",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "tailwindcss": "^3.4.17",
        "tsx": "^4.19.2",
        "typescript": "^5"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "printWidth": 120
    }
}
