{
    "name": "best-release-indonesia",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "update-cache": "tsx src/hooks/fetchAnimeData.ts",
        "dev": "NODE_OPTIONS='--inspect' npm run update-cache && next dev",
        "scan": "NODE_OPTIONS='--inspect' npm run update-cache && next dev & npx react-scan@latest localhost:3000",
        "build": "npm run update-cache && next build",
        "start": "next start",
        "lint": "next lint",
        "pretty": "prettier --check .",
        "format": "prettier --write .",
        "format-db": "python sorting_data.py && prettier --write ."
    },
    "dependencies": {
        "@heroui/react": "^2.7.9",
        "child_process": "^1.0.2",
        "framer-motion": "^12.16.0",
        "lodash.debounce": "^4.0.8",
        "lucide-react": "^0.513.0",
        "next": "15.3.3",
        "next-themes": "^0.4.6",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-icons": "^5.5.0"
    },
    "devDependencies": {
        "@types/node": "^22.15.30",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^9",
        "eslint-config-next": "15.3.3",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.6.12",
        "tailwindcss": "^4.0.0",
        "tsx": "^4.19.4",
        "typescript": "^5"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "printWidth": 120
    }
}
